{
   "name": "toolchains_emscripten",
   "build": { "dockerfile": "Dockerfile" },
   "mounts": [
      {
         "source": "${localEnv:HOME}/.ssh",
         "target": "/home/developer/.ssh",
         "type": "bind"
      }
   ],
   "remoteUser": "developer",
   "customizations": {
      "vscode": {
         "extensions": [
            "BazelBuild.vscode-bazel"
         ]
      }
   },
   "runArgs": [
      "--network=host"
   ]
}
